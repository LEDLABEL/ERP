<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Task Stages -->

        <record id="project_stage_analysis" model="project.task.type">
            <field name="sequence">10</field>
            <field name="name">Analysis</field>
            <field name="default_stage" eval="True"/>
        </record>
        <record id="project_stage_specification" model="project.task.type">
            <field name="sequence">20</field>
            <field name="name">Specification</field>
            <field name="default_stage" eval="True"/>
        </record>
        <record id="project_stage_design" model="project.task.type">
            <field name="sequence">30</field>
            <field name="name">Design</field>
            <field name="default_stage" eval="True"/>
        </record>
        <record id="project_stage_development" model="project.task.type">
            <field name="sequence">40</field>
            <field name="name">Development</field>
            <field name="default_stage" eval="True"/>
        </record>
        <record id="project_stage_testing" model="project.task.type">
            <field name="sequence">50</field>
            <field name="name">Testing</field>
            <field name="default_stage" eval="True"/>
        </record>
        <record id="project_stage_merge" model="project.task.type">
            <field name="sequence">60</field>
            <field name="name">Merge</field>
            <field name="default_stage" eval="False"/>
            <field name="fold" eval="True"/>
        </record>
        <record id="project_stage_deployment" model="project.task.type">
            <field name="sequence">70</field>
            <field name="name">Done</field>
            <field name="default_stage" eval="True"/>
            <field name="fold" eval="True"/>
        </record>
        <record id="project_stage_cancel" model="project.task.type">
            <field name="sequence">80</field>
            <field name="name">Cancelled</field>
            <field name="default_stage" eval="True"/>
            <field name="fold" eval="True"/>
        </record>

    </data>
</odoo>
